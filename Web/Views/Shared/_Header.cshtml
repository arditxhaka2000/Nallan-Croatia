<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize Feather icons
        if (typeof feather !== 'undefined') {
            feather.replace();
        }

        // Universal Menu functionality (works for both desktop and mobile)
        const menuToggle = document.getElementById('nallanMenuToggle');
        const mobileMenuToggle = document.getElementById('nallanMobileMenuToggle');
        const menuClose = document.getElementById('nallanMenuClose');
        const menuOverlay = document.getElementById('nallanMenuOverlay');
        const sideMenu = document.getElementById('nallanSideMenu');

        // Desktop user dropdown
        const userBtn = document.getElementById('nallanUserBtn');
        const userDropdown = document.getElementById('nallanUserDropdown');

        // Mobile user dropdown
        const mobileUserBtn = document.getElementById('nallanMobileUserBtn');
        const mobileUserDropdown = document.getElementById('nallanMobileUserDropdown');

        // Desktop search dropdown
        const desktopSearchBtn = document.getElementById('nallanDesktopSearchBtn');
        const desktopSearchDropdown = document.getElementById('nallanDesktopSearchDropdown');

        function openMenu() {
            if (menuOverlay && sideMenu) {
                menuOverlay.classList.add('active');
                sideMenu.classList.add('active');
                document.body.style.overflow = 'hidden';
            }
        }

        function closeMenu() {
            if (menuOverlay && sideMenu) {
                menuOverlay.classList.remove('active');
                sideMenu.classList.remove('active');
                document.body.style.overflow = '';
                // Hide all submenus
                document.querySelectorAll('.nallan-submenu').forEach(submenu => {
                    submenu.classList.remove('active');
                });
                // Reset expandable arrows
                document.querySelectorAll('.nallan-menu-item.expandable').forEach(item => {
                    item.classList.remove('expanded');
                });
            }
        }

        // Make closeMenu globally available
        window.closeMenu = closeMenu;

        // Menu toggle event listeners
        if (menuToggle) menuToggle.addEventListener('click', openMenu);
        if (mobileMenuToggle) mobileMenuToggle.addEventListener('click', openMenu);
        if (menuClose) menuClose.addEventListener('click', closeMenu);
        if (menuOverlay) menuOverlay.addEventListener('click', closeMenu);

        // Desktop user dropdown
        if (userBtn && userDropdown) {
            userBtn.addEventListener('click', function(e) {
                e.stopPropagation();
                userDropdown.classList.toggle('active');
                // Close other dropdowns
                if (desktopSearchDropdown) desktopSearchDropdown.classList.remove('active');
                if (mobileUserDropdown) mobileUserDropdown.classList.remove('active');
            });
        }

        // Mobile user dropdown
        if (mobileUserBtn && mobileUserDropdown) {
            mobileUserBtn.addEventListener('click', function(e) {
                e.stopPropagation();
                mobileUserDropdown.classList.toggle('active');
                // Close other dropdowns
                if (desktopSearchDropdown) desktopSearchDropdown.classList.remove('active');
                if (userDropdown) userDropdown.classList.remove('active');
            });
        }

        // Desktop search dropdown
        if (desktopSearchBtn && desktopSearchDropdown) {
            desktopSearchBtn.addEventListener('click', function(e) {
                e.stopPropagation();
                desktopSearchDropdown.classList.toggle('active');
                // Close other dropdowns
                if (userDropdown) userDropdown.classList.remove('active');
                if (mobileUserDropdown) mobileUserDropdown.classList.remove('active');

                // Focus on search input when opened
                if (desktopSearchDropdown.classList.contains('active')) {
                    const searchInput = desktopSearchDropdown.querySelector('input[name="name"]');
                    if (searchInput) {
                        setTimeout(() => searchInput.focus(), 100);
                    }
                }
            });
        }

        // Close dropdowns when clicking outside
        document.addEventListener('click', function() {
            if (userDropdown) userDropdown.classList.remove('active');
            if (mobileUserDropdown) mobileUserDropdown.classList.remove('active');
            if (desktopSearchDropdown) desktopSearchDropdown.classList.remove('active');
        });

        // Close menu and dropdowns on escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeMenu();
                if (userDropdown) userDropdown.classList.remove('active');
                if (mobileUserDropdown) mobileUserDropdown.classList.remove('active');
                if (desktopSearchDropdown) desktopSearchDropdown.classList.remove('active');
            }
        });

        // Cart count functionality (integrate with your existing cart system)
        try {
            refreshCartCountFromServer();

            const addToCartButtons = document.querySelectorAll('.add-to-cart-btn');
            if (addToCartButtons && addToCartButtons.length > 0) {
                addToCartButtons.forEach(button => {
                    button.addEventListener('click', function () {
                        setTimeout(refreshCartCountFromServer, 300);
                    });
                });
            }
        } catch (e) {
            console.error("Error in cart functionality:", e);
        }
    });

    // Submenu toggle function (works for both desktop and mobile)
    function toggleSubmenu(id) {
        const submenu = document.getElementById('submenu-' + id);
        const expandableItem = document.querySelector(`[onclick="toggleSubmenu('${id}')"]`);

        if (submenu && expandableItem) {
            const isActive = submenu.classList.contains('active');

            // Hide all other submenus and reset their arrows
            document.querySelectorAll('.nallan-submenu').forEach(sub => {
                if (sub !== submenu) {
                    sub.classList.remove('active');
                }
            });
            document.querySelectorAll('.nallan-menu-item.expandable').forEach(item => {
                if (item !== expandableItem) {
                    item.classList.remove('expanded');
                }
            });

            // Toggle the clicked submenu and arrow
            if (!isActive) {
                submenu.classList.add('active');
                expandableItem.classList.add('expanded');
            } else {
                submenu.classList.remove('active');
                expandableItem.classList.remove('expanded');
            }
        }
    }

    // Cart functions (from your existing code)
    function refreshCartCountFromServer() {
        try {
            console.log("reer0",@currentLanguage);
            fetch('/@currentLanguage/Cart/GetCartItemCount', {
                method: 'GET',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                if (data && typeof data === 'object') {
                    const count = data.count !== undefined ? Number(data.count) : 0;
                    updateCartCount(isNaN(count) ? 0 : count);
                } else {
                    console.warn('Invalid response format:', data);
                    updateCartCount(0);
                }
            })
            .catch(error => {
                console.error('Error fetching cart count:', error);
                updateCartCount(0);
            });
        } catch (e) {
            console.error("Error in refreshCartCountFromServer:", e);
        }
    }

    function updateCartCount(newCount) {
        try {
            // Update all cart badges
            const desktopBadge = document.getElementById('nallanCartBadge');
            const mobileBadge = document.getElementById('nallanMobileCartBadge');

            if (desktopBadge) {
                desktopBadge.style.display = newCount > 0 ? 'flex' : 'none';
                desktopBadge.textContent = newCount;
            }
            if (mobileBadge) {
                mobileBadge.style.display = newCount > 0 ? 'flex' : 'none';
                mobileBadge.textContent = newCount;
            }

            console.log('Cart count updated to:', newCount);
        } catch (e) {
            console.error("Error in updateCartCount:", e);
        }
    }

    function switchLanguage(newLang) {
        var currentPath = window.location.pathname;
        var queryString = window.location.search; // Get query parameters
        var segments = currentPath.split('/').filter(segment => segment.length > 0);

        if (segments.length > 0) {
            // Replace the first segment (language) with the new language
            segments[0] = newLang;
            var newPath = '/' + segments.join('/');

            // Add query string back if it exists
            if (queryString) {
                newPath += queryString;
            }

            console.log('New path with query:', newPath);
            console.log('============================');
            window.location.href = newPath;
        } else {
            // Fallback for homepage
            window.location.href = '/' + newLang;
        }
    }
</script>