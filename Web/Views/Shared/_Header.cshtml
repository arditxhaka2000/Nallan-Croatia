<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize Feather icons
        if (typeof feather !== 'undefined') {
            feather.replace();
        }

        // Mobile Menu functionality
        const mobileMenuToggle = document.getElementById('nallanMobileMenuToggle');
        const mobileMenuClose = document.getElementById('nallanMobileMenuClose');
        const mobileMenuOverlay = document.getElementById('nallanMobileMenuOverlay');
        const mobileSideMenu = document.getElementById('nallanMobileSideMenu');
        const mobileUserBtn = document.getElementById('nallanMobileUserBtn');
        const mobileUserDropdown = document.getElementById('nallanMobileUserDropdown');

        function openMobileMenu() {
            if (mobileMenuOverlay && mobileSideMenu) {
                mobileMenuOverlay.classList.add('active');
                mobileSideMenu.classList.add('active');
                document.body.style.overflow = 'hidden';
            }
        }

        function closeMobileMenu() {
            if (mobileMenuOverlay && mobileSideMenu) {
                mobileMenuOverlay.classList.remove('active');
                mobileSideMenu.classList.remove('active');
                document.body.style.overflow = '';
                // Hide all mobile submenus
                document.querySelectorAll('.nallan-mobile-submenu').forEach(submenu => {
                    submenu.classList.remove('active');
                });
            }
        }

        // Make closeMobileMenu globally available
        window.closeMobileMenu = closeMobileMenu;

        if (mobileMenuToggle) mobileMenuToggle.addEventListener('click', openMobileMenu);
        if (mobileMenuClose) mobileMenuClose.addEventListener('click', closeMobileMenu);
        if (mobileMenuOverlay) mobileMenuOverlay.addEventListener('click', closeMobileMenu);

        // Mobile User dropdown
        if (mobileUserBtn && mobileUserDropdown) {
            mobileUserBtn.addEventListener('click', function(e) {
                e.stopPropagation();
                mobileUserDropdown.classList.toggle('active');
            });
        }

        // Close dropdowns when clicking outside
        document.addEventListener('click', function() {
            if (mobileUserDropdown) mobileUserDropdown.classList.remove('active');
        });

        // Close menu on escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeMobileMenu();
                if (mobileUserDropdown) mobileUserDropdown.classList.remove('active');
            }
        });

        // Cart count functionality (integrate with your existing cart system)
        try {
            refreshCartCountFromServer();

            const addToCartButtons = document.querySelectorAll('.add-to-cart-btn');
            if (addToCartButtons && addToCartButtons.length > 0) {
                addToCartButtons.forEach(button => {
                    button.addEventListener('click', function () {
                        setTimeout(refreshCartCountFromServer, 300);
                    });
                });
            }
        } catch (e) {
            console.error("Error in cart functionality:", e);
        }
    });

    // Mobile Submenu toggle function
    function toggleMobileSubmenu(id) {
        const submenu = document.getElementById('mobile-' + id);
        if (submenu) {
            const isActive = submenu.classList.contains('active');

            // Hide all other submenus
            document.querySelectorAll('.nallan-mobile-submenu').forEach(sub => {
                sub.classList.remove('active');
            });

            // Toggle the clicked submenu
            if (!isActive) {
                submenu.classList.add('active');
            }
        }
    }

    // Cart functions (from your existing code)
    function refreshCartCountFromServer() {
        try {
            console.log("reer0",@currentLanguage);
            fetch('/@currentLanguage/Cart/GetCartItemCount', {
                method: 'GET',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                if (data && typeof data === 'object') {
                    const count = data.count !== undefined ? Number(data.count) : 0;
                    updateCartCount(isNaN(count) ? 0 : count);
                } else {
                    console.warn('Invalid response format:', data);
                    updateCartCount(0);
                }
            })
            .catch(error => {
                console.error('Error fetching cart count:', error);
                updateCartCount(0);
            });
        } catch (e) {
            console.error("Error in refreshCartCountFromServer:", e);
        }
    }

    function updateCartCount(newCount) {
        try {
            // Desktop cart badge
            const desktopBadge = document.getElementById('cartCountBadge');
            const mobileBadge = document.getElementById('cartCountBadgeMobile');
            const newMobileBadge = document.getElementById('nallanMobileCartBadge');

            if (desktopBadge) {
                desktopBadge.style.display = newCount > 0 ? 'inline' : 'none';
                desktopBadge.textContent = newCount;
            }
            if (mobileBadge) {
                mobileBadge.style.display = newCount > 0 ? 'inline' : 'none';
                mobileBadge.textContent = newCount;
            }
            if (newMobileBadge) {
                newMobileBadge.style.display = newCount > 0 ? 'flex' : 'none';
                newMobileBadge.textContent = newCount;
            }

            console.log('Cart count updated to:', newCount);
        } catch (e) {
            console.error("Error in updateCartCount:", e);
        }
    }
            function switchLanguage(newLang) {
        var currentPath = window.location.pathname;
        var queryString = window.location.search; // Get query parameters
        var segments = currentPath.split('/').filter(segment => segment.length > 0);

        if (segments.length > 0) {
            // Replace the first segment (language) with the new language
            segments[0] = newLang;
            var newPath = '/' + segments.join('/');

            // Add query string back if it exists
            if (queryString) {
                newPath += queryString;
            }

            console.log('New path with query:', newPath);
            console.log('============================');
            window.location.href = newPath;
        } else {
            // Fallback for homepage
            window.location.href = '/' + newLang;
        }
    }
</script>