@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Identity

@inject SignInManager<Data.AppUser> SignInManager
@inject UserManager<Data.AppUser> UserManager

@{
    var currentLanguage = ViewContext.RouteData.Values["lang"]?.ToString() ?? "hr";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

    // Try multiple ways to get ProductId
    var currentProductId = ViewContext.RouteData.Values["ProductId"]?.ToString()
                        ?? ViewContext.RouteData.Values["productId"]?.ToString()
                        ?? ViewContext.RouteData.Values["id"]?.ToString();

    // Debug: Let's see what we're getting
    System.Diagnostics.Debug.WriteLine($"=== HEADER DEBUG ===");
    System.Diagnostics.Debug.WriteLine($"Controller: {currentController}");
    System.Diagnostics.Debug.WriteLine($"Action: {currentAction}");
    System.Diagnostics.Debug.WriteLine($"ProductId: '{currentProductId}'");
    System.Diagnostics.Debug.WriteLine($"All Route Values: {string.Join(", ", ViewContext.RouteData.Values.Select(kvp => $"{kvp.Key}: {kvp.Value}"))}");
    System.Diagnostics.Debug.WriteLine($"Full Path: {ViewContext.HttpContext.Request.Path}");
    System.Diagnostics.Debug.WriteLine($"==================");

    var sharedRes = ViewData["Shared"] as Dictionary<string, string> ?? new Dictionary<string, string>();
}
@functions {
    string BuildLanguageUrl(string newLang, string controller, string action, string productId, Microsoft.AspNetCore.Http.HttpContext context)
    {
        // If we can't get ProductId from route values, try extracting from current URL
        if (action == "Details" && string.IsNullOrEmpty(productId))
        {
            var pathSegments = context.Request.Path.Value.Split('/', StringSplitOptions.RemoveEmptyEntries);
            if (pathSegments.Length >= 4 && pathSegments[1].Equals(controller, StringComparison.OrdinalIgnoreCase) && pathSegments[2].Equals(action, StringComparison.OrdinalIgnoreCase))
            {
                productId = pathSegments[3]; // Get ProductId from URL path
            }
        }

        if (action == "Details" && !string.IsNullOrEmpty(productId))
        {
            return $"/{newLang}/{controller}/{action}/{productId}";
        }
        else
        {
            return $"/{newLang}/{controller}/{action}";
        }
    }
}
